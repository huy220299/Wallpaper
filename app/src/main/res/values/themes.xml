<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wallpaper" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_tab</item>
        <item name="colorSecondaryVariant">@color/background_tab</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="collapsingToolbarLayoutStyle">@color/background_color</item>

        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>



        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/white</item>

<!--        <item name="android:forceDarkAllowed" >true</item>-->

    </style>
    <!-- Customize seek bar  -->
    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/text_change_color</item>
        <item name="android:progressTint">@color/main_color</item>
        <item name="android:colorControlActivated">@color/main_color</item>
    </style>

    <style name="NavigationTheme" parent="Theme.Wallpaper">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">15dp</item>


    </style>

    <style name="Base.Widget.Design.TabLayout" parent="Theme.Wallpaper">
    </style>

    <style name="PreferenceTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>
<!--    <style name="dot_style">-->
<!--        <item name="android:layout_width">7dip</item>-->
<!--        <item name="android:layout_height">7dip</item>-->
<!--        <item name="android:background">@drawable/dot_normal</item>-->
<!--        <item name="android:layout_marginLeft">2dip</item>-->
<!--        <item name="android:layout_marginRight">2dip</item>-->
<!--    </style>-->



    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>

    </style>

    <style name="Widget.MyApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>


</resources>