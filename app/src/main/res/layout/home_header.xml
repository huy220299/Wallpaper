<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/imageViewer"
    android:layout_below="@+id/toolbar">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardCornerRadius="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <me.angeldevil.autoscrollviewpager.AutoScrollViewPager
                android:id="@+id/vpheader"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                />
            <com.rd.PageIndicatorView
                android:id="@+id/pageIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="@dimen/_180sdp"
                android:layout_marginRight="@dimen/_20sdp"
                app:piv_animationType="scale"
                app:piv_interactiveAnimation="true"
                app:piv_selectedColor="#B39DDB"
                app:piv_unselectedColor="#FFFFFF"
                android:layout_marginBottom="@dimen/_5sdp"
                app:piv_viewPager="@id/vpheader"
                app:piv_padding="@dimen/_1sdp"
                app:piv_radius="@dimen/_5sdp"
                app:piv_dynamicCount="true"
                android:visibility="gone"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>