<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/background_bottomsheet"
    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_30sdp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/home_img1"
            android:src="@drawable/home_selected"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerHorizontal="true"
            app:tint="@color/gray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_img1"
            android:textSize="@dimen/_10ssp"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:text="Set as Home screen"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_30sdp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/home_img2"
            android:src="@drawable/screen_locked"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Share this Algorithm"
            android:layout_centerHorizontal="true"
            app:tint="@color/gray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_img2"
            android:textSize="@dimen/_10ssp"
            android:singleLine="true"
            android:layout_centerHorizontal="true"

            android:text="Set as Lock screen"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/_20sdp"
        android:paddingBottom="@dimen/_30sdp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/home_img3"
            android:src="@drawable/smartphone"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="Share this Algorithm"
            android:layout_centerHorizontal="true"
            app:tint="@color/gray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_img3"
            android:textSize="@dimen/_10ssp"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:text="Set as Home and Lock screen"/>
    </RelativeLayout>
</LinearLayout>
