<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/background_color"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_more_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|start"
            android:layout_margin="@dimen/_10sdp"
            android:text="more than 33 brands"
            android:textColor="@color/text_change_color"/>
        <TextView
            android:id="@+id/view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|right"
            android:layout_margin="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:text="VIEW ALL >>"
            android:textColor="@color/text_change_color"/>

        <androidx.constraintlayout.motion.widget.MotionLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_more_brand"
            app:layoutDescription="@xml/item_album_type_header_xml_constraintlayout_scene">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.motion.widget.MotionLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>